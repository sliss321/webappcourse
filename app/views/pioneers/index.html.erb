<p id="notice"><%= notice %></p>

<h1>Listing Pioneers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pioneers.each do |pioneer| %>
      <tr>
        <td><%= pioneer.first_name %></td>
        <td><%= pioneer.last_name %></td>
        <td><%= link_to 'Show', pioneer %></td>
        <td><%= link_to 'Edit', edit_pioneer_path(pioneer) %></td>
        <td><%= link_to 'Destroy', pioneer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

